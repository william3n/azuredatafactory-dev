{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-pluralsight"
		},
		"afsPluralsight_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'afsPluralsight'"
		},
		"SQLAdventureWorksLT_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "share-az-connectionString"
		},
		"kvpluralsight_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://kv-pluralsight.vault.azure.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-pluralsight_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"afsPluralsight_connectionString": {
						"value": "[parameters('afsPluralsight_connectionString')]"
					},
					"kvpluralsight_properties_typeProperties_baseUrl": {
						"value": "[parameters('kvpluralsight_properties_typeProperties_baseUrl')]"
					},
					"SQLAdventureWorksLT_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('SQLAdventureWorksLT_properties_typeProperties_connectionString_secretName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}